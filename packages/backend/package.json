{
  "name": "@lz/backend",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^18.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "test": "mocha",
    "clean": "rm -rf dist",
    "build": "tsc",
    "start": "node -r source-map-support/register dist",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 src",
    "typecheck": "tsc --noEmit",
    "clear:db-dump": "rm -rf scripts/db",
    "update:db-dump": "cd scripts && bash update_cache.sh",
    "start:testnet": "lz-testnet"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@l2beat/backend-tools": "0.5.0",
    "@l2beat/discovery": "0.41.0",
    "@l2beat/discovery-types": "0.8.0",
    "@l2beat/uif": "^0.2.3",
    "@lz/libs": "*",
    "@lz/testnet": "*",
    "@sentry/node": "^7.73.0",
    "@types/deep-diff": "^1.0.4",
    "deep-diff": "^1.0.2",
    "ethers": "^5.7.2",
    "knex": "^2.5.1",
    "koa": "^2.14.2",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "node-fetch": "2",
    "pg": "^8.11.3",
    "source-map-support": "^0.5.21",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^11.1.0",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.13.8",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-etag": "^3.0.0",
    "@types/koa__cors": "^4.0.1",
    "@types/koa__router": "^12.0.0",
    "@types/node-fetch": "^2.6.5",
    "@types/sinon": "^10.0.16",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "@types/supertest": "^2.0.12",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
